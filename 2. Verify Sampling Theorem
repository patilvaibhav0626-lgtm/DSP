clc;
 clear all;
 close all;
 fm = 50;
 tf = 0.05;
 t = 0:0.00005:tf;
 x = cos(2 * pi * fm * t);
 subplot(4,1,1);
 plot(t, x);
 xlabel('time');
 ylabel('amplitude');
 title('sinusoidal signal');
 % Case 1: fs1 = 1.3 fm
 fs1 = 1.3 * fm;
 n1 = 0:1/fs1:tf;
 xn1 = cos(2 * pi * fm * n1);
 subplot(4,1,2);
 plot(t, x, n1, xn1, 'r');
 xlabel('n1');
 ylabel('amplitude');
 title('for fs1 = 1.3 fm');
 % Case 2: fs2 = 2 fm
 fs2 = 2 * fm;
 n2 = 0:1/fs2:tf;
 xn2 = cos(2 * pi * fm * n2);
 subplot(4,1,3);
 plot(t, x, n2, xn2, 'green');
 xlabel('n2');
 ylabel('amplitude');
 title('for fs2 = 2 fm');
 % Case 3: fs3 = 50 fm
 fs3 = 50 * fm;
 n3 = 0:1/fs3:tf;
 xn3 = cos(2 * pi * fm * n3);
 subplot(4,1,4);
 plot(t, x, n3, xn3, 'b');
 xlabel('n3');
 ylabel('amplitude');
 title('for fs3 = 50 fm');
